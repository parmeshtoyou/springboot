package com.param.sprinbootdemo.app.controller.topic;

import java.util.Arrays;
import java.util.List;

import org.springframework.stereotype.Service;

@Service
public class TopicService {

	private List<Topic> topicList = Arrays.asList(
			new Topic("1", "First Topic", "This is the First Topic"),
			new Topic("2", "Second Topic", "This is the Second Topic"),
			new Topic("3", "Third Topic", "This is the Third Topic"));

	public List<Topic> getAllTopics() {
		return topicList;
	}
}
